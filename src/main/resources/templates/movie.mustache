{{>header}}

<div class="row">
    <div class="col s6">
        <div class="card">
            <div class="card-content">
                <span class="card-title">{{movie.title}}</span>
                <p>{{movie.director}}</p>
            </div>
            {{#actors}}
                <div>
                    <a href="http://localhost:8080/actor/{{id}}"><p>{{name}} {{surname}}</p></a>
                </div>
            {{/actors}}
            <div>
                <p>Votes: {{movie.votes}}</p>
            </div>

        </div>
    </div>

{{>footer}}
